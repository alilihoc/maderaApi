{% extends "layout.html.twig" %}
{% set active = 'new_project' %}
{% set active_link = 'new_project' %}
{% block page_title %} Nouveau projet {% endblock %}

{% block content %}

    <main class="no-bg">
        <div class="container">
            <div class="row">
                {# Navigation de l'admin#}
                {% include "admin/adminComp/_navigation.html.twig" %}

                <div class=" col-xs-12 col-md-8">

                    <div class="content-box-header">
                        <div class="panel-title titre-moncompte"><h2>Projet: {{ project.name }}</h2></div>
                    </div>
                    <div class="oeuvre content-box-large box-with-header">
                        <table class="table">
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ project.id }}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ project.name }} </td>
                            </tr>
                            <tr>
                                <th>Client</th>
                                <td>{{ project.customer.firstname ~ " " ~ project.customer.lastname }}</td>
                            </tr>
                            <tr>
                                <th>CreationDate</th>
                                <td>{{ project.creationDate ? project.creationDate|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>DateEnd</th>
                                <td>{{ project.dateEnd ? project.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Plan</th>
                                <td><a href="{{ path('plan_show', {id: project.plan.id}) }}">{{ project.plan.name }}</a></td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        </div>
        </section>
        </div>
        </div>
    </main>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
