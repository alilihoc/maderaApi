{% block body %}
    {# Messages Flash #}
    {% block flash_messages %}
        <div class="alert_flash_group">
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="alert alert_flash bg-{{ type }} alert-dismissible" role="alert">
                        <button type="button" class="close close_flash" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                        {{ message | raw }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    {% endblock %}

